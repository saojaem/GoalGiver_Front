<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <!-- Goal section -->


        <Button
            android:id="@+id/set_goal_team_Btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/add_goal_btn"
            android:layout_margin="20dp"
            tools:ignore="MissingConstraints">

        </Button>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/add_emotion"
            android:text="+"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/set_goal_team_Btn"
            app:layout_constraintTop_toTopOf="@+id/set_goal_team_Btn"
            tools:ignore="NotSibling">

        </Button>

        <TextView
            android:id="@+id/set_goal_team_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/set_goal_team_Btn"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="구분">

        </TextView>
        <LinearLayout
            android:id="@+id/goal_add_team_distinguish"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/set_goal_team_text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:chipIconVisible="false"
            android:checkable="true"
            tools:ignore="MissingConstraints"
            app:layout_goneMarginStart="20dp">

            <Button
                android:id="@+id/goal_add_team_personal"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="개인"
                android:textColor="#0E9AFF"
                android:textSize="14dp"
                android:textStyle="bold"
                android:background="@drawable/circle_btn"
                android:layout_marginStart="20dp"/>

            <Button
                android:id="@+id/goal_add_team_team"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/circle_choose_btn"
                android:textColor="#FFFFFF"
                android:text="팀"
                android:textStyle="bold"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/set_goal_team_category_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/goal_add_team_distinguish"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="유형"/>

        <LinearLayout
            android:id="@+id/goal_add_team_category_choose"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/set_goal_team_category_tv"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:chipIconVisible="false"
            android:checkable="true"
            tools:ignore="MissingConstraints"
            app:layout_goneMarginStart="20dp">

            <Button
                android:id="@+id/goal_add_team_TimeAttack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Time Attack"
                android:textColor="#FFFFFF"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:background="@drawable/circle_choose_btn"
                android:layout_marginStart="20dp"/>

            <Button
                android:id="@+id/goal_add_team_GoalSuccess"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/circle_btn"
                android:textColor="#0E9AFF"
                android:text="Goal Success"
                android:textStyle="bold"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goal_add_team_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:layout_marginStart="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_team_category_choose"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:background="@drawable/recode_btn">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is Time Attack?"
                android:textStyle="bold"
                android:textColor="#188AFD"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정해진 시간 내에 미션 해결"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="#757575"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is Goal success?"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#188AFD"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시간 관계없이 가장 먼저 목표를 달성하는 사람이 우승"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="#757575"/>
        </LinearLayout>

        <TextView
            android:id="@+id/goal_add_team_choose_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팀원 선택"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:paddingStart="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_team_category"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/goal_add_team_choose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/add_emotion"
            android:text="+"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/goal_add_team_choose_tv"
            app:layout_constraintStart_toStartOf="@id/goal_add_team_distinguish"/>


        <LinearLayout
            android:id="@+id/goal_add_team_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/goal_add_team_choose"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/goal_add_team_Starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/goal_add_team_Endtime"
                app:layout_constraintTop_toTopOf="parent"
                android:text="시작 시간"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/goal_add_team_Endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/goal_add_team_Starttime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="종료 시간"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/goal_add_team_calender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_team_time_text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/goal_add_team_time_setting_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/goal_add_team_date_text"
                android:orientation="horizontal"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/goal_add_team_Starttime_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="오후 2:00"
                    android:textSize="20dp"
                    android:padding="8dp"
                    android:background="@drawable/date_tv"
                    />

                <ImageButton
                    android:id="@+id/goal_add_team_Starttime_calender"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/date_calender"
                    android:contentDescription="달력" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/goal_add_team_time_setting_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/goal_add_team_time_text"
                android:orientation="horizontal"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/goal_add_team_endtime_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/date_tv"
                    android:padding="8dp"
                    android:hint="오후 2:00"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/goal_add_team_Endtime_calender"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/date_calender"
                    android:contentDescription="달력" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/goal_add_team_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/goal_add_team_calender"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/goal_add_team_Startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/goal_add_team_Enddate"
                app:layout_constraintTop_toTopOf="parent"
                android:text="시작 날짜"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/goal_add_team_Enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/goal_add_team_Startdate"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="종료 날짜"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/goal_add_team_calender2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_team_date_text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/goal_add_date_team_setting_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_date_text"
            android:orientation="horizontal"
            android:layout_weight="1">

            <EditText
                android:id="@+id/goal_add_team_StartDate_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="2024-06-19"
                android:textSize="20sp"
                android:padding="8dp"
                android:background="@drawable/date_tv"
                />

            <ImageButton
                android:id="@+id/goal_add_team_Startdate_calender"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/date_calender"
                android:contentDescription="달력" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goal_add_team_date_setting_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_team_date_text"
            android:orientation="horizontal"
            android:layout_weight="1">

            <EditText
                android:id="@+id/goal_add_team_enddate_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/date_tv"
                android:padding="8dp"
                android:hint="2024-06-19"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/goal_add_team_EndDate_calender"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/date_calender"
                android:contentDescription="달력" />
        </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/goal_add_team_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_team_calender2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/goal_add_team_repeat_tv"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="반복"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/recode_btn" />

            <Button
                android:layout_width="61dp"
                android:layout_height="44dp"
                android:text="선택"
                android:background="@drawable/click_btn"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/goal_add_team_certification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인증 방법"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_team_repeat"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:id="@+id/goal_add_team_certification_ways"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/goal_add_team_certification"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/goal_add_team_certification_camera"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="사진 인증"
                android:textColor="@color/black"
                android:background="@drawable/recode_btn"/>
            <Button
                android:id="@+id/goal_add_team_certification_location"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="위치 인증"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:background="@drawable/recode_btn"/>
            <Button
                android:id="@+id/goal_add_team_certification_team"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="팀원 인증"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:background="@drawable/recode_btn"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/goal_add_team_donation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_team_certification_ways"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/goal_add_team_donation_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="기부 단체"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/goal_add_team_donation_tv2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/recode_btn" />
            <Button
                android:id="@+id/goal_add_team_donation_btn"
                android:layout_width="61dp"
                android:layout_height="44dp"
                android:text="선택"
                android:background="@drawable/click_btn"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/goal_add_team_donation_price"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            app:layout_constraintStart_toStartOf="@+id/goal_add_team_donation"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_team_donation"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/goal_add_team_donationP_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="기부 금액"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/goal_add_team_donationP_tv2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/recode_btn" />
            <TextView
                android:id="@+id/goal_add_team_donationP_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="p"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/goal_add_team_point_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0E9AFF"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/goal_add_team_donation_price"
            app:layout_constraintTop_toBottomOf="@id/goal_add_team_donation_price"
            android:text="보유 포인트 : 50000p"/>

        <Button
            android:id="@+id/goal_add_team_decide_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/goal_add_team_point_tv"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/click_btn"
            android:text="추가하기"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
