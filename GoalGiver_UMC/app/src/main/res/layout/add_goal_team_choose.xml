<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/add_goal_team_choose_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:background="@color/white">
        <ImageView
            android:id="@+id/add_goal_team_choose_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="뒤로가기"
            android:src="@drawable/icn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/add_goal_team_choose_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팀원 선택"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/add_goal_team_choose_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_goal_repeat_sub"
            android:text="선택완료"
            android:textColor="#0E9AFF"
            android:textSize="13dp" />
    </LinearLayout>
    <ListView
        android:id="@+id/add_goal_team_choose_LV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/add_goal_team_choose_bar"/>


</androidx.constraintlayout.widget.ConstraintLayout>