<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/add_goal_repeat_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="반복"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/add_goal_repeat_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_goal_repeat_tv"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="272dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:background="@drawable/add_goal_repeat_plus">

            <Button
                android:id="@+id/add_goal_repeat_day_BT"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/add_goal_repeat_sub"
                android:text="매일" />

            <Button
                android:id="@+id/add_goal_repeat_week_BT"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:text="매주"/>
            <Button
                android:id="@+id/add_goal_repeat_month_BT"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/add_goal_repeat_sub"
                android:text="매월"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/add_goal_repeat_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/add_goal_repeat_tablayout"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/add_goal_repeat_btn"
            android:layout_width="157dp"
            android:layout_height="44dp"
            android:padding="3dp"
            android:orientation="horizontal"
            android:background="@drawable/add_goal_repeat_plus">

            <Button
                android:id="@+id/add_goal_repeat_button_decrease"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/add_goal_repeat_sub"
                android:text="―"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/add_goal_repeat_text_quantity"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/add_goal_repeat_button_increase"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/add_goal_repeat_sub"
                android:textSize="20sp"
                android:text="+" />

        </LinearLayout>


        <TextView
            android:id="@+id/add_goal_repeattext_daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일 마다"
            android:textSize="14dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_goal_repeat_week"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/add_goal_repeat_day"
        tools:ignore="MissingConstraints">
        <ToggleButton
            android:id="@+id/add_goal_repeat_button_sun"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@drawable/add_goal_repeat_toggletext"
            android:text="일"
            android:textOn="일"
            android:textOff="일"
            android:textSize="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/add_goal_repeat_toggle_select" />
        <ToggleButton
            android:id="@+id/add_goal_repeat_button_mon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="월"
            android:textOn="월"
            android:textOff="월"
            android:textSize="15dp"
            android:layout_marginEnd="10dp"
            android:textColor="@drawable/add_goal_repeat_toggletext"
            android:background="@drawable/add_goal_repeat_toggle_select" />

        <ToggleButton
            android:id="@+id/add_goal_repeat_button_tue"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="화"
            android:textOn="화"
            android:textOff="화"
            android:textSize="15dp"
            android:layout_marginEnd="10dp"
            android:textColor="@drawable/add_goal_repeat_toggletext"
            android:background="@drawable/add_goal_repeat_toggle_select" />

        <ToggleButton
            android:id="@+id/add_goal_repeat_button_wed"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="수"
            android:textOn="수"
            android:textOff="수"
            android:textSize="15dp"
            android:layout_marginEnd="10dp"
            android:textColor="@drawable/add_goal_repeat_toggletext"
            android:background="@drawable/add_goal_repeat_toggle_select" />

        <ToggleButton
            android:id="@+id/add_goal_repeat_button_thu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="목"
            android:textOn="목"
            android:textOff="목"
            android:textSize="15dp"
            android:layout_marginEnd="10dp"
            android:textColor="@drawable/add_goal_repeat_toggletext"
            android:background="@drawable/add_goal_repeat_toggle_select" />

        <ToggleButton
            android:id="@+id/add_goal_repeat_button_fri"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="금"
            android:textOn="금"
            android:textOff="금"
            android:textSize="15dp"
            android:layout_marginEnd="10dp"
            android:textColor="@drawable/add_goal_repeat_toggletext"
            android:background="@drawable/add_goal_repeat_toggle_select" />

        <ToggleButton
            android:id="@+id/add_goal_repeat_button_sat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="토"
            android:textOn="토"
            android:textOff="토"

            android:textColor="@drawable/add_goal_repeat_toggletext"
            android:background="@drawable/add_goal_repeat_toggle_select" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_goal_repeat_month"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/add_goal_repeat_week"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/add_goal_repeat_month_spinner"
            android:layout_width="157dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:background="@drawable/add_goal_repeat_plus">
            <Spinner
                android:id="@+id/add_goal_repeat_text_spinner_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:tooltipText="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/add_goal_repeat_text_month_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="일"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_goal_repeat_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_goal_repeat_month"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/add_goal_repeat_cencel"
            android:layout_width="28dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="취소"
            android:textColor="#0E9AFF"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/add_goal_repeat_plus"/>
        <Button
            android:id="@+id/add_goal_repeat_choose_complete"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/click_btn"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_weight="2"
            android:text="선택 완료"/>
    </LinearLayout>
    <!-- 하단에 표시할 레이아웃 -->
    <FrameLayout
        android:background="@color/white"
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>