<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.gms.maps.MapView
        android:id="@+id/add_goal_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/add_goal_map">
        <Button
            android:id="@+id/add_goal_map_cencel"
            android:layout_width="28dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="취소"
            android:textColor="#0E9AFF"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/add_goal_repeat_plus"/>
        <Button
            android:id="@+id/add_goal_map_complete"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/click_btn"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_weight="2"
            android:text="선택 완료"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>