<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <!-- Popup theme -->
    <style name="popupTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Customize your popup theme here. -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">#188AFD</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="buttonStyle">@style/MyButton</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#0E9AFF</item> <!-- Set the desired button color -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>



</resources>
